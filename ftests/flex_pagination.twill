#
# tests the pagination on the everything search
#
# expects: 
#    at least three pages of items exist
#

go ${base_url}/sitesearch
follow 'all'
find '<li>\s*1\s*</li>'
notfind '<li>\s*2\s*</li>'
notfind '<li>\s*3\s*</li>'
fv people_sort sort_by 'getId'
submit
find 'selected="selected">A to Z<'
follow '^2$'
notfind '<li>\s*1\s*</li>'
find '<li>\s*2\s*</li>'
notfind '<li>\s*3\s*</li>'
find 'selected="selected">A to Z<'
