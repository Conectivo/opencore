<configure xmlns="http://namespaces.zope.org/zope"
           xmlns:meta="http://namespaces.zope.org/meta"
           xmlns:browser="http://namespaces.zope.org/browser">

  <browser:layer name="magic" />

  <meta:redefinePermission from="zope2.Public" to="zope.Public" />

  <!--
  <browser:skin
      name="nui"
      layers="magic default"
      interface=".interfaces.INuiSkin"
      />
  -->

  <!-- browser:defaultSkin name="nui" / -->

  <browser:page
    for="*"
    class="..opencoreview.OpencoreView"
    permission="zope.Public"
    name="main_template"
    template="main_template.pt"
    layer="magic"
    />

  <browser:page
    for="opencore.interfaces.IProject"
    class="..opencoreview.OpencoreView"
    permission="zope2.Public"
    name="index.html"
    template="project-view.pt"
    />

  <browser:view
    for="*"
    name="standard_macros"
    class=".macros.StandardMacros"
    permission="zope2.Public"
    allowed_interface="zope.interface.common.mapping.IItemMapping"
    />

  <browser:view
    for="*"
    name="nui_macros"
    class=".macros.NuiMacros"
    permission="zope2.Public"
    allowed_interface="zope.interface.common.mapping.IItemMapping"
    />

</configure>
