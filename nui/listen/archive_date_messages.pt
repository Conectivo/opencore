<html metal:use-macro="here/@@standard_macros/master">
  <body>
    <div metal:fill-slot="content">
      <div id="oc-content-main" i18n:domain="listen"
        tal:define="messages view/getMessageList;
                    template_id string:by_date;">
          <h1 tal:content="view/Title" i18n:translate="">
            Title or Id
          </h1>

          <div metal:use-macro="here/@@listen_macros/tabs"/>
          <p id="listaddress" tal:content="view/listAddress" tal:condition="view/listAddress">
            Description
          </p>

          <p tal:content="view/listDescription" tal:condition="view/listDescription">
            Description
          </p>

          <a id="new-topic" href="#" tal:condition="view/canPost"
            tal:attributes="href string:${view/context/absolute_url}/new_topic;"
            i18n:translate="label_forum_new_topic_button">
            Post New Topic   	
          </a>

          <ul id="message-list-actions">
            <li>
              <a id="switch_view" href="by_thread"
                 i18n:translate="">Threaded listing</a>
            </li>
            <li>
              <a id="up-one-level" href="../forum_view"
                 tal:define="ml view/getMailingList;"
                 tal:attributes="href string:${ml/absolute_url}/archive/forum_view"
                 i18n:translate="">Forum view</a>
            </li>
          </ul>

          <ul id="message-list">
            <li tal:repeat="message messages">
              <a href="." tal:attributes="href message/url;"
                 ><strong tal:content="message/subject" i18n:translate="">Re: Subj</strong></a> &mdash;
              <a href="."
                 tal:omit-tag="not:message/from_id"
                 tal:attributes="href string:${here/portal_url}/author/${message/from_id}">
                <span tal:replace="message/mail_from">test@example.com</span>
              </a>
              (<span tal:replace="message/date">Tue, 16 Nov 2005</span>)
            </li>
          </ul>

          <p tal:condition="not: messages"
             i18n:translate="description_no_posts">
            There are currently no posts in this archive.
          </p>
      </div>
    </div>
  </body>
</html>
