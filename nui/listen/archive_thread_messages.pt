<html metal:use-macro="here/@@standard_macros/master">
  <body>
    <div metal:fill-slot="content">
      <div metal:use-macro="here/@@listen_macros/bcrumb"/>
      <div metal:use-macro="here/@@listen_macros/tabs"/>
      <div id="oc-content-main" i18n:domain="listen"
           tal:define="thread view/getThreadedMessageStructure;
                       template_id string:by_date;">

        <div class="oc-headingBlock">
          <h2 i18n:translate="" tal:content="view/Title" />
          <div class="oc-headingContext oc-smallText">View by <a i18n:translate="" href="../forum_view">conversation</a> or <strong>date</strong> (<strong>threaded</strong> or <a id="switch_view" href="by_date" i18n:translate="">flat</a>)</div>
        </div>

          <ul id="message-list" class="oc-plainList">
            <li tal:repeat="message thread">
              <a href="." i18n:translate=""
                 tal:attributes="href message/url;"
                 ><strong tal:content="message/subject">Re: Subj</strong></a>
              <span class="oc-discreetText">
              from <a href="."
                 tal:omit-tag="not:message/from_id"
                 tal:attributes="href string:${here/portal_url}/author/${message/from_id}"
                 ><span tal:replace="message/mail_from">test@example.com</span
              ></a>
              on <span tal:replace="message/date">Tue, 16 Nov 2005</span>
              </span>
              <tal:subthread define="local_thread message/children">
                <div metal:use-macro="here/message_macros/macros/thread" />
              </tal:subthread>
            </li>
          </ul>

          <p tal:condition="not: thread" i18n:translate="description_no_posts">
            There are currently no posts in this archive.
          </p>
      </div><!-- content-main -->
      <div id="oc-content-sidebar">
            <a class="oc-banana" href="#" tal:condition="view/canPost"
             tal:attributes="href string:${context/absolute_url}/new_topic;"
             i18n:translate="label_forum_new_topic_button">
              Post new message
            </a>
        <div class="oc-boxy">
          <h2>About &ldquo;<span tal:replace="context/Title" />&rdquo;</h2>
          <dl class="oc-plainList">
          <dt>Address</dt>
          <dd id="listaddress" tal:content="view/listAddress" tal:condition="view/listAddress" />
          <dt>Description</dt>
          <dd tal:content="view/listDescription" tal:condition="view/listDescription" />
          </dl>
        </div>
      </div><!-- content-sidebar -->
    </div><!-- content-container -->
  </body>
</html>
