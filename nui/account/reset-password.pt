<tal:handle define="global isreset view/handle_reset" replace="nothing"/>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
  lang="en-US"
  metal:use-macro="here/@@standard_macros/master"
  i18n:domain="plone">
  <body>
    <div metal:fill-slot="content">
      <div class="oc-headingBlock">
        <h1 i18n:domain="passwordresettool"
          i18n:translate="heading_reset_password">
          Enter a new your password
        </h1>
        <p class="oc-headingContext"
          i18n:domain="passwordresettool" 
          i18n:translate="description_reset_password">
          Please select a new password.
        </p>
      </div><!-- end .headingBlock -->

      <div id="oc-content-main">
        <form class="group" 
          name="pwreset_action" 
          method="post"
          tal:attributes="action string:${context/absolute_url}/${view/name}">
          <fieldset>
            <legend class="headingBlock"
              i18n:domain="passwordresettool" 
              i18n:translate="legend_new_password">
              New Password
            </legend>

            <input type="hidden" 
              name="key" 
              tal:attributes="value request/key | view/key" />

            <div class="field">                
              <label for="userid" 
                i18n:translate="label_my_user_name_is">My user name is</label>

              <input name="userid"
                tal:attributes="value request/userid|nothing;
                tabindex tabindex/next | nothing;" />
            </div>

            <div class="field" >
              <label for="password"
                i18n:translate="label_new_password">New password</label>

              <input type="password"
                id="password"
                name="password"
                size="10"
                tabindex=""
                tal:attributes="tabindex tabindex/next | nothing;" />
            </div>

            <div class="field">                     
              <label for="confirm"
                i18n:translate="label_confirm_password">Confirm password</label>

              <input type="password"
                id="password2"
                name="password2"
                size="10"
                tabindex=""
                tal:attributes="tabindex tabindex/next | nothing;" />
            </div>

            <div class="row">
              <!-- <div class="label">&nbsp;</div> -->

              <div class="field">
                <button class="context" type="submit" name="set:boolean" value="True">Set my password</button>
              </div>
            </div>
            <input type="hidden" name="form.submitted" value="1" />
          </fieldset>
        </form>
      </div>
    </div><!-- end content slot -->
  </body>
</html>
