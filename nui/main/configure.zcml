<configure xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:five="http://namespaces.zope.org/five">

  <!-- projects portal -->
  <!-- opencore.interfaces.IProjectsFolder -->
  <browser:page
     for="Products.OpenPlans.interfaces.adding.IAddProject"
     class=".search.SearchView"
     permission="zope.Public"
     name="oc-projects"
     template="projects.pt"
     />

  <!-- projects-searchresults -->
  <browser:page
     for="Products.OpenPlans.interfaces.adding.IAddProject"
     class=".search.SearchView"
     permission="zope.Public"
     name="results"
     template="projects-searchresults.pt"
     />
  
  <!-- people portal -->
  <!-- opencore.interfaces.IPeopleFolder: index.html -->
  <browser:page
     for="*"
     class=".search.SearchView"
     permission="zope.Public"
     name="peoplesearch"
     template="people.pt"
     />

  <!-- people-searchresults -->
  <browser:page
     for="*"
     class=".search.SearchView"
     permission="zope.Public"
     name="results"
     template="people-searchresults.pt"
     />

  <!-- home-->
  <!-- Products.CMFPlone.interfaces.IPloneSite -->
  <browser:page
     for="*"
     class=".search.SearchView"
     permission="zope.Public"
     name="index.html"
     template="home.pt"
     />

</configure>
