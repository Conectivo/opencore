<html metal:use-macro="here/@@standard_macros/master">
  <body>

    <div metal:fill-slot="content">

      <div class="oc-headingBlock">
        <h1>People on OpenPlans</h1>
        <p class="oc-headingContext">Currently bringing together <span tal:replace="view/nusers">XXX</span> members</p>
      </div>

      <div id="oc-content-main">
        <tal:set_var define="current_search_page string:people;
			     form_action_url string:${context/portal_url}/people/searchresults">
        <div metal:use-macro="here/main_macros/search_widget" />
        </tal:set_var>
      </div>


      <!-- content-sidebar -->

      <div id="oc-content-sidebar">
        <div tal:condition="not: view/loggedin" tal:content="structure view/anonymous_txt" />
        <div tal:condition="view/loggedin" tal:content="structure view/notanonymous_txt" />
      </div><!-- content-sidebar -->

    </div><!-- content-fill-slot -->

  </body>
</html>
