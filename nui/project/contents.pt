<tal:vars define="proj view/project_info">
  <html metal:use-macro="here/@@standard_macros/master">
    <body>
      <div metal:fill-slot="content">
        <div class="oc-headingBlock">
          <h1>Project contents</h1>
          <p class="oc-headingContext">Manage and rename your stuff. hi.</p>
        </div>
        <div id="oc-content-main" class="oc-content-main-fullWidth">

          <div class="oc-widget oc-widget-dataTable">
            <div class="oc-heading">
              <h3>Wiki pages</h3>
              <!--<p class="oc-heading-context">What do you want your project to be named?</p>-->
            </div>
            <div class="oc-searchresults-nresults">
              1-20 of 55
            </div>
            <form class="oc-liveForm" action="modify-contents">
              <table class="oc-dataTable" cellpadding="0" cellspacing="0">
                <thead>
                  <tr>
                    <th class="oc-dataTable-checkBoxColumn"><input type="checkbox" class="oc-checkAll" /></th>
                    <th scope="col"><a class="oc-columnSortable oc-selected" href="">Title &darr;</a></th>
                    <th scope="col"><a class="oc-columnSortable" href="">Size</a></th>
                    <th scope="col"><a class="oc-columnSortable" href="">Last modified</a></th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <tal:for repeat="page view/pages">
                    <tr class="oc-liveItem" tal:attributes="id page/getId">
                      <td>
                        <input type="checkbox" name="batch[]"
                          tal:attributes="value page/getId" />
                      </td>
                      <td>
                        <div class="oc-liveItem-value">
                          <a href="TODO-FILLIN">
                            <tal:dummy replace="page/Title" />
                          </a>
                        </div>

                        <div class="oc-liveItem-editForm">
                          <input type="text" 
                            tal:attributes="name string:${page/Title}_title;value string:${page/Title}" 
                            />
                          <button type="submit"
                            tal:attributes="value string:task=update&target=${page/getId}">
                            Save
                          </button>
                          or
                          <a href="#" class="oc-liveItem_toggle">
                            Cancel
                          </a>
                        </div>
                      </td>
                      <td>
                        <tal:dummy replace="page/getObjSize" />
                      </td>
                      <td>
                        <tal:dummy replace="page/ModificationDate" />
                        by
                        <a href="TODO-FILLIN">
                          <tal:dummy replace="page/lastModifiedAuthor" />
                        </a>
                      </td>
                      <td>
                        <ul class="oc-actions oc-dataTable-row-actions">
                          <li>
                            <a class="oc-actionLink"
                              tal:attributes="href string:modify-contents?task=${page/getId}_delete">
                              Delete
                            </a>
                          </li>
                        </ul>
                      </td>
                    </tr>
                  </tal:for>
                </tbody>
              </table>

              <ul class="oc-actions oc-dataTable-actions">
                <li>
                  <button type="submit" name="task" value="batch_delete" class="oc-button" >Delete</button>
                </li>
              </ul>
            </form>

          </div><!-- end .oc-widget-dataTable -->


        </div><!-- end .oc-content-main -->
      </div><!-- end content-fill-slot -->
    </body>
  </html>
</tal:vars>
