#
# try to create a project with bad input, expecting errors back
#
# projname - the id of the project 
# projfullname - the full name of the project 
# projpolicy - the initial security policy 
#              [open_policy,medium_policy,closed_policy]
# projfeaturelets - a comma separated list of featurelet names to enable
# 
# expects: 
#    logged in 
#
extend_with flunc.checkbox

go ${base_url}
follow "Start a project"

# check blank title
fv create_form id $projid
fv create_form title ""
fv create_form workflow_policy $projpolicy
check_group_values create_form featurelets:list $projfeaturelets
submit

notfind 'site error' i
find 'Please correct the errors indicated below' i
find 'project name must contain' 

# check invalid title
fv create_form id $projname
fv create_form title "'"
fv create_form workflow_policy $projpolicy
check_group_values create_form featurelets:list $projfeaturelets
submit

notfind 'site error' i
find 'Please correct the errors indicated below' i
find 'project name must contain' i

# check blank id
fv create_form id ''
fv create_form title $projfullname
fv create_form workflow_policy $projpolicy
check_group_values create_form featurelets:list $projfeaturelets
submit

notfind 'site error' i
find 'Please correct the errors indicated below' i
find 'project url may contain' i
