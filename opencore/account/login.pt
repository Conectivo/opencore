<tal:var tal:define="fdata view/handle_request;
   		     login view/handle_login"/>
<html i18n:domain="opencore" metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title" 
           tal:content="string:${view/portal_title} Login" />

    <body>
      
      <tal:opencore.content metal:fill-slot="content">
	
        <metal:login use-macro="view/login_snippet/macros/login_snippet" />
        <metal:forgot use-macro="view/forgot_snippet/macros/forgot_snippet" />
	
      </tal:opencore.content>

      <tal:opencore.sidebar metal:fill-slot="sidebar">
	
        <div class="oc-getstarted">
          <h2 i18n:translate="login_heading">New users</h2>
          <p i18n:translate="login_description">Whether your group is mobilizing voters, planning a protest, or growing a garden, <tal:block replace="view/portal_title" /> can help you become more effective.</p>
          <a href="join" class="oc-banana"
             tal:content="string:Join ${view/portal_title}" />
        </div>
	
      </tal:opencore.sidebar>

  </body>
</html>

