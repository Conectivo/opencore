<h1 tal:replace="structure here/manage_page_header"
    i18n:domain="opencore">Header</h1>

<h2 tal:define="form_title string:Add OpenCore Remote Auth Plugin"
    tal:replace="structure here/manage_form_title">Form Title</h2>

  <p class="form-help" i18n:translate="add_remote_auth_plugin_help">
  Install an OpenCore remote auth plugin. This plugin will enable one
  OpenCore installation to authenticate from another.  Fires an event
  upon success; the default handler creates a local user that mirrors
  (and forks) the remote user.
  </p>

<form action="manage_addOpenCoreRemoteAuth" method="POST">
  <table>
    <tr>
      <td class="form-label" i18n:translate="id">Id</td>
      <td><input type="text" name="id"/></td>
    </tr>
    <tr>
      <td class="form-label" i18n:translate="title">Title</td>
      <td><input type="text" name="Title"/></td>
    </tr>
    <tr>
      <td colspan="2">
        <div class="form-element">
          <input type="submit" value="Add OpenCore remote auth plugin"
             i18n:attributes="value add_remote_auth_plugin_button" />
        </div>
      </td>
    </tr>
  </table>
</form>

<h1 tal:replace="structure here/manage_page_footer">Footer</h1>
