<html metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title" 
           tal:content="string:Summary - ${view/window_title}" />
  </head>

  <body>
    <tal:opencore.content metal:fill-slot="content">

        <!-- project metadata -->
        <div class="oc-headingBlock oc-clearAfter">
          <img style="float: left; width: 80px; margin: 0 1em 0.5em 0; border: 1px solid #EEE;" tal:attributes="src view/logo_url" />
          <h1 tal:content="view/area/Title">Title</h1>
          <p class="oc-headingContext oc-discreetText">
            created 
            <span tal:define="date view/area/CreationDate"
		  tal:content="python:view.pretty_date(date)">
              September 26
            </span>,
            last updated
            <span tal:define="date view/area/ModificationDate"
		  tal:content="python:view.pretty_date(date)">
              yesterday
            </span>
            <a tal:condition="not: context/isProjectMember"  href="request-membership" class="oc-actionLink">Join</a>
          </p>
	  <a class="oc-actionLink" tal:condition="view/team_manager" href="preferences">EDIT</a>
          <p tal:condition="view/project_info/description" tal:content="view/project_info/description" />
        </div>

        <!-- feeds -->      
	<div class="oc-columnGroup">

          <tal:feeds replace="structure provider:opencore.feed_summaries">
            Rendering happens with viewlets in featurelet packages
          </tal:feeds>

	</div>

    </tal:opencore.content>

    <tal:opencore.sidebar metal:fill-slot="sidebar">

        <!-- Team -->
        <div class="oc-widget oc-widget-feed">

          <tal:extra_feeds replace="structure provider:opencore.extra_feeds" />

        </div>
        
        <!-- display project security settings -->
        <h2>Security <a class="oc-actionLink" tal:condition="view/team_manager" href="preferences">EDIT</a></h2>
        <p tal:condition="python:view.project_info['security'] == 'open_policy'">
          Anyone can view this <span tal:replace="view/project_noun">project</span> and
          any <span tal:replace="view/portal_title">site</span>
          member can contribute to it
        </p>
        <p tal:condition="python:view.project_info['security'] == 'medium_policy'">
          Anyone can view this <span tal:replace="view/project_noun">project</span>
          but only team members can contribute to it
        </p>
        <p tal:condition="python:view.project_info['security'] == 'closed_policy'">
          Only team members can view, contribute, or search for this
          <span tal:replace="view/project_noun">project</span>
        </p>

    </tal:opencore.sidebar>

  </body>
</html>
