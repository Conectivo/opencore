<div class="oc-widget oc-widget-feed oc-home-column">
  <h2 class="oc-feed-title">
    <span tal:replace="view/feedtitle">Feed Title</span>
    <a tal:attributes="href view/link">
      <span tal:replace="view/linktitle">
	MORE ITEMS
      </span>
    </a>       
  </h2>
  <ul class="oc-feed-list">
    <li class="oc-feed-item oc-clearAfter" 
	tal:repeat="feeditem
		    view/items">
<!--      <img tal:attributes="src feeditem/icon" /> -->
      <div>
	<h3 class="oc-feed-item-title">
	  <a tal:attributes="href feeditem/url"
	     tal:content="feeditem/title" />	  
	</h3>
	<p class="oc-feed-item-data oc-discreetText">
	   <span tal:replace="feeditem/byline | default">
	     by
	   </span>
	   <a tal:attributes="href feeditem/author/home"
	      tal:content="feeditem/author/userid" />
	   on <span tal:define="date feeditem/date"
		    tal:replace="python:view.pretty_date(date)"/>
	</p>
      </div>
    </li>
</ul>
