<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/@@standard_macros/master"
      i18n:domain="opencore">

<head>
<title metal:fill-slot="title">
  Featured Project -- <tal:heading replace="context/title" />
</title>
</head>

<body>
<div metal:fill-slot="content">
  <tal:vars define="proj python:context.getRefs()[0]">
    <p>
      <a tal:attributes="href proj/absolute_url"
         tal:content="context/Title" />
      <a class="oc-actionLink"
         tal:attributes="href string:${context/absolute_url}/edit">
        Edit
      </a>
    </p>
    <p tal:content="context/Description" />
    <img tal:attributes="src string:${proj/absolute_url}/logo;
                         title proj/Title;
                         alt proj/Title" />
    <p>
      <a tal:attributes="href string:${context/portal_url}/features">Back</a>
      to features (convenience link)
    </p>
  </tal:vars>
</div>

</body>
</html>
