<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/@@standard_macros/master"
      i18n:domain="opencore">

<body>
<div metal:fill-slot="content">
  <tal:vars define="proj python:context.getRefs()[0]">
    <h1><a tal:attributes="href proj/absolute_url" tal:content="proj/Title" />
      <a class="oc-actionLink"
         tal:attributes="href string:${context/absolute_url}/edit">
        Edit
      </a>
    </h1>
    <dl>
      <dt>Title</dt>
      <dd tal:content="context/Title" />
      <dt>Description</dt>
      <dd tal:content="context/Description" />
      <dt>Text</dt>
      <dd tal:content="structure context/getText" />
    </dl>
    <a tal:attributes="href string:${context/absolute_url}/features">All features</a>
  </tal:vars>
</div>
</body>
</html>
