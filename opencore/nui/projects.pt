<div id="content-main">
  <div id="nprojects" class="headingBlock">
     <h2>Projects on OpenPlans.org</h2>
     <p class="headingContext">Currently serving <span tal:replace="view/nprojects"/> projects</p>
  </div>

<form name="projects-search" action="." tal:attributes="action request/ACTUAL_URL">
  <label><h2>Search for Projects</h2></label>
  <input type="text" name="projname" />
  <input type="hidden" name="oc-content" value="oc-projects" />
  <input type="submit" name="action_search_projects" value="Search" />
</form>

<ul class="widget-alphabet" tal>
  <li tal:repeat="letter modules/string/uppercase">
    <a href=""><span tal:replace="letter">A</span></a>
  </li>
</ul>

<tal:searchresults condition="request/action_search_projects | nothing">
<h2>Search Results</h2>
<ul class="widget-feed" tal:condition="nocall: view/search_projects">
  <li class="feed-item clearAfter" tal:repeat="project view/search_projects">
    <div class="avatar">
      <img src="" />
    </div>
    <div class="item-content">
      <div class="item-title">
        <a href="" tal:attributes="href project/absolute_url" tal:content="nocall: project/title">Project Title</a>
      </div>
      <p class="item-data discreetText">
        YY members, active since <span tal:replace="nocall: view/dob">Jan 1937</span>
      </p>
      <p class="item-description">
       Animal Campaign has invited you to become a member
      </p>
    </div>
    <hr />
  </li>
</ul>
<div tal:condition="not: nocall: view/search_projects">Sorry Dude.  No results found.</div>


</tal:searchresults>

