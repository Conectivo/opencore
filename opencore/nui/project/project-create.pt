<html metal:use-macro="here/@@standard_macros/master">
  <head>
    <link metal:fill-slot="link" />
    <script metal:fill-slot="script" />
  </head>
  <body>
    <div metal:fill-slot="content">
      <div class="oc-headingBlock">
        <h1>Start a project</h1>
      </div>
      <div id="oc-content-main">
        <form name="create_form" method="post" enctype="multipart/form-data" class="enableUnloadProtection"
            tal:attributes="action string:${here/absolute_url}/@@createProject">
          <fieldset>
            <div class="oc-headingBlock">
              <h2>Step 1. Enter project details</h2>
            </div>
            <table class="oc-form">
              <tbody>
                <tr class="oc-form-row">
                  <th class="oc-form-label" scope="row">
                    <label for="full_name">Name</label>
                  </th>
                  <td class="oc-form-value">
                    <input type="text" id="full_name" name="full_name" />
                  </td>
                  <td class="oc-form-help">
                    <span class="oc-form-context"></span>
                    <span id="oc-username-validator" class="oc-form-validator"></span>
                  </td>
                </tr>
                <tr class="oc-form-row">
                  <th class="oc-form-label" scope="row">
                    <label>http://</label>
                  </th>
                  <td class="oc-form-value">
                    <!-- TODO dynamically populate this input with javascript based on what was entered for project name -->
                    <input type="text" name="title" id="title" />.openplans.org
                    <!-- XXX the name "title" of this input is misleading, but we inherited it from the schema -->
                  </td>
                  <td class="oc-form-help">
                    <span class="oc-form-context"></span>
                    <span id="oc-username-validator" class="oc-form-validator"></span>
                  </td>
                </tr>
                <tr class="oc-form-row">
                  <th class="oc-form-label" scope="row">
                    <label for="mission">Mission Statement</label>
                  </th>
                  <td class="oc-form-value">
                    <textarea name="mission" id="mission" rows="3" cols="40"></textarea>
                  </td>
                  <td class="oc-form-help">
                    <span class="oc-form-context"></span>
                    <span id="oc-username-validator" class="oc-form-validator"></span>
                  </td>
                </tr>
              </tbody>
            </table>
          </fieldset>

          <fieldset>
            <legend><h2>Step 2: Choose security settings</h2></legend>
            <fieldset>
              <legend class="oc-legend-label">All project members can view and edit project content.<br/>
                <strong>Other logged-in users can:</strong>
              </legend>
              <ul class="oc-form-radiolist">
                <li>
                  <input type="radio" class="oc-input-typeRadio" id="securitylevel-3" name="workflow_policy"
                    checked="checked"/>
                  <label for="securitylevel-3">view and edit content</label>
                </li>
                <li>
                  <input type="radio" class="oc-input-typeRadio" id="securitylevel-2" name="workflow_policy" />
                  <label for="securitylevel-2">only view content</label>
                </li>
                <li>
                  <input type="radio" class="oc-input-typeRadio" id="securitylevel-1" name="workflow_policy" />
                  <label for="securitylevel-1">neither view nor edit content</label>
                  <ul class="oc-discreetText">
                    <li class="oc-smallText">
                      <!-- TODO only enable this checkbox if security level is 3 -->
                      <input type="checkbox" class="oc-input-typeCheck" id="searchable" name="searchable" />
                      <label for="searchable">do not show project in search results</label>
                    </li>
                  </ul>
                </li>
              </ul>
            </fieldset>
          </fieldset>

          <fieldset>
            <legend><h2>Step 3: Add tools</h2></legend>
            <ul class="oc-form-radiolist" >
              <li>
                <input type="checkbox" class="oc-input-typeCheck" id="tasktracker" name="featurelets:list" />
                <label for="tasktracker">Task Tracker</label>
              </li>
              <li>
                <input type="checkbox" class="oc-input-typeCheck" id="listen" name="featurlets:list" />
                <label for="listen">Mailing lists</label>
              </li>
            </ul>
          </fieldset>
          <button type="submit" class="oc-input-typeButton">create</button>
        </form>

      </div><!-- end .oc-content-main -->
    </div><!-- end content-fill-slot -->
  </body>
</html>
