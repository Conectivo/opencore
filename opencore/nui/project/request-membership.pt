<html metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title" tal:content="string:Join - ${view/area/Title}" />
  </head>
  <body>
    <div metal:fill-slot="content">
      <div id="oc-content-main">
        <div class="oc-headingBlock">
          <h1>Join <span tal:replace="view/area/Title" /></h1>
          <p class="oc-headingContext">Request membership to this project.</p>
        </div>
        <form method="POST" id="request-membership"
              tal:attributes="action view/request/ACTUAL_URL">
            <label for="request-message">Message</label>
            <span class="oc-discreetText">(optional)</span>
            <textarea rows="10" cols="80" 
                      name="request-message"
                      id="request-message"
                      class="oc-autoFocus"></textarea>
            <input type="submit" name="task|request-membership" value="Send"
                   class="oc-button" />
               or
               <a tal:attributes="href context/absolute_url">
                 Cancel
               </a>
        </form>
      </div><!--end oc-content-main -->
      <div id="oc-content-sidebar">
        <div class="oc-boxy" tal:condition="mission">
        <h2>About &ldquo;<span tal:replace="view/area/Title" />&rdquo;</h2>
        <dl class="oc-plainList">
          <dt>Goals</dt>
          <dd tal:define="mission context/Description"
             tal:condition="mission"
             tal:content="mission">Project mission statement</dd>
        </dl>
        </div>
      </div>
    
    </div><!-- end content-fill-slot -->
  </body>
</html>
