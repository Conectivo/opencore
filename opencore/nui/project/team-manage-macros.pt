<tal:vars
   define="global team_manage_macros template/macros" />


<!-- SHARED SNIPPETS -->

<metal:memberlink define-macro="memberlink">
  <div tal:define="mem_id item/getId;
                   mem_url python:view.getMemberURL(mem_id)">
    <a tal:attributes="href mem_url"
       tal:condition="mem_url"
       tal:content="mem_id" />

    <tal:memid condition="not: mem_url"
               replace="mem_id" />
  </div>
</metal:memberlink>

<!-- "PENDING" LISTS (MEMBERSHIP REQUESTS AND INVITATIONS) -->

<metal:pendingrow define-macro="pendingrow">
  <tr tal:attributes="id item/id">

    <td>
      <input type="checkbox" name="checked:list"
             tal:attributes="value item/id" />
    </td>

    <td>
      <div metal:use-macro="team_manage_macros/memberlink" />
    </td>

    <td metal:define-slot="status" />

    <!--td tal:define="requesteddate item/lastWorkflowTransitionDate"
        tal:content="python:view.pretty_date(requesteddate)" /-->
    <td>nothing to see here</td>

  </tr>
</metal:pendingrow>


<metal:pendingrequest
   define-macro="pendingrequest">
  <tr metal:use-macro="team_manage_macros/pendingrow">

    <td metal:fill-slot="status"
        tal:content="string:needs approval" />

  </tr> <!-- end pendingrow -->

</metal:pendingrequest>


<metal:pendinginvitation
   define-macro="pendinginvitation">
  <tr metal:use-macro="team_manage_macros/pendingrow">

    <td metal:fill-slot="status"
        tal:content="string:needs approval" />

  </tr> <!-- end pendingrow -->

</metal:pendinginvitation>


<metal:requestbuttons
   define-macro="requestbuttons">

  <li>
    <button type="submit" name="task" value="batch:checked_approve-requests"
            class="oc-button" >approve</button>
  </li>
  <li>
    <button type="submit" name="task" value="batch:checked_discard-requests"
            class="oc-button" >discard</button>
  </li>
  <li>
    <button type="submit" name="task" value="batch:checked_reject-requests"
            class="oc-button" >reject</button>
  </li>
  <!--li>
      <button type="submit" name="task" value="reject_msg"
              class="oc-button" >reject with message</button>
  </li-->

</metal:requestbuttons>


<metal:invitationbuttons
   define-macro="invitationbuttons">

  <li>
    <button type="submit" name="task" value="batch:checked_remove-invitations"
            class="oc-button" >remove</button>
  </li>
  <li>
    <button type="submit" name="task" value="batch:checked_remind-invitations"
            class="oc-button" >send reminder</button>
  </li>

</metal:invitationbuttons>


<metal:pendinglist define-macro="pendinglist">
  <div class="oc-widget oc-widget-dataTable">

    <div class="oc-heading">
      <h3 tal:content="string:$item_heading ($num_items)" />
    </div>

    <form method="POST" class="oc-liveForm"
          tal:attributes="name item_type;
                          id item_type;
                          action view/request/ACTUAL_URL">
      <table class="oc-dataTable" cellpadding="0" cellspacing="0">

        <thead>
          <tr>
            <th class="oc-dataTable-checkBoxColumn"><input type="checkbox" class="oc-checkAll" /></th>
            <th scope="col"><!--a class="oc-columnSortable" href=""-->Username<!--/a--></th>
            <th scope="col"><!--a class="oc-columnSortable" href=""-->Status<!--/a--></th>
            <th scope="col"><!--a class="oc-columnSortable" href=""-->Date requested<!--/a--></th>
          </tr>
        </thead>

	<tbody>

          <tal:items repeat="item item_collection">
            <tr metal:use-macro="python:team_manage_macros.get('pending%s' % item_type)" />
          </tal:items>

	</tbody>

      </table>

      <ul class="oc-actions oc-dataTable-actions">
        <metal:buttons use-macro="python:team_manage_macros.get('%sbuttons' % item_type)" />
      </ul>
    </form>
  </div> <!-- end .oc-widget-dataTable -->
</metal:pendinglist>



<!-- ACTIVE TEAM MEMBER LIST  -->

<metal:mshiprow define-macro="mshiprow">
  <tr tal:attributes="id item/id">

    <td>
      <input type="checkbox" name="checked:list"
             tal:attributes="value item/id" />
    </td>

    <td>
      <div metal:use-macro="team_manage_macros/memberlink" />
    </td>

    <td tal:define="member_role item/role">
      <div>
        <input type="hidden" name="all:list"
               tal:attributes="value item/id" />
        <select tal:attributes="name string:${item/id}_roles;
                                id string:${item/id}_set-roles;"
                class="oc-actionSelect">
          <tal:roleoptions repeat="roleitem view/rolemap/items">
            <option tal:attributes="value python:roleitem[0];
                                    selected python:(roleitem[1] == member_role)"
                    tal:content="python:roleitem[1]" />
          </tal:roleoptions>
        </select>
      </div>
    </td>

    <td>
      <div tal:define="active_since item/active_since"
           tal:content="python:view.pretty_date(active_since)">
      </div>
    </td>

    <td>
      <div tal:content="item/listed">
      </div>
    </td>

  </tr>
</metal:mshiprow>

<metal:mshiplist define-macro="mshiplist">
  <div class="oc-widget oc-widget-dataTable"
       tal:define="mships view/active_mships;
                   num_items python:len(mships)">

    <div class="oc-heading">
      <h3 tal:content="string:Your team members ($num_items)" />
    </div>

    <form name="team-members" id="team-members" method="POST"
          class="oc-liveForm" tal:attributes="action view/request/ACTUAL_URL">
      <table class="oc-dataTable" cellpadding="0" cellspacing="0">

        <thead>
          <tr>
            <th class="oc-dataTable-checkBoxColumn"><input type="checkbox" class="oc-checkAll" /></th>
            <th scope="col"><!--a class="oc-columnSortable" href=""-->Username<!--/a--></th>
            <th scope="col"><!--a class="oc-columnSortable" href=""-->Role<!--/a--></th>
            <th scope="col"><!--a class="oc-columnSortable" href=""-->Effective since<!--/a--></th>
            <th scope="col"><!--a class="oc-columnSortable" href=""-->Listed<!--/a--></th>
          </tr>
        </thead>

	<tbody name="mship-rows" id="mship-rows">

          <tal:items repeat="item mships">
            <metal:mshiprow use-macro="team_manage_macros/mshiprow" />
          </tal:items>

	</tbody>

      </table>

      <ul class="oc-actions oc-dataTable-actions">
        <li>
          <button type="submit" name="task"
                  value="batch:checked_remove-members" class="oc-button" >remove members</button>
          <noscript>
            <button type="submit" name="task"
                    value="batch:all_set-roles" class="oc-button" >set roles</button>
          </noscript>
        </li>
      </ul>
    </form>
  </div> <!-- end .oc-widget-dataTable -->
</metal:mshiplist>


<!-- MEMBER SEARCH FORM-->

<metal:search-members define-macro="search-members">

  <form name="search-members" id="search-members" method="POST">
    <input class="oc-input-typeText" type="text" name="search_for" />
    <button type="submit" name="task" value="none_search-members"
            class="oc-button">search</button>
    <div tal:condition="view/results | nothing">
      <div tal:repeat="member view/results">
        <button type="submit" name="task" class="oc-button"
                tal:attributes="value string:${member/getId}_invite-member">invite</button>
        <tal:mem_url define="mem_url python:view.membertool.getHomeUrl(member.getId)">
          <a tal:condition="mem_url" tal:attributes="href mem_url"
             tal:content="string: ${member/getId}: ${member/getFullname}" />
          <span tal:condition="not:mem_url"
                tal:replace="string: ${member/getId}: ${member/getFullname}" />
        </tal:mem_url>
      </div>
    </div>
  </form>

</metal:search-members>
