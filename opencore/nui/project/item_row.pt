<tal:macro metal:define-macro="item_row"
	   tal:define="item item | options/item;
		       item_type item_type | options/item_type">
  <tr class="oc-liveItem" tal:attributes="id item/id">
    <td>
      <input type="checkbox" name="batch[]"
             tal:attributes="value item/id" />
    </td>
    <td>
      <div class="oc-liveItem-value">
        <a tal:attributes="href item/url">
          <tal:dummy replace="item/title" /></a> <a href="#" class="oc-liveItem_hoverShowForm">Edit</a>
      </div>
      
      <div class="oc-liveItem-editForm">
        <input type="text" 
               tal:attributes="name string:${item/id}_title; value item/title" 
               />
        <button type="submit" name="task"
                tal:attributes="value string:${item/id}_update">
          Save
        </button>
        or
        <a href="#" class="oc-liveItem_cancel">
          Cancel
        </a>
      </div>
    </td>
    <td>
      <tal:dummy replace="item/obj_size" />
    </td>
    <td>
      <tal:dummy replace="item/obj_date" />
      by
      <a tal:attributes="href string:${view/siteURL}/people/${item/obj_author}">
        <tal:dummy replace="item/obj_author" />
      </a>
    </td>
    <td>
      <ul class="oc-actions oc-dataTable-row-actions">
        <li>
          <a class="oc-actionLink"
             tal:attributes="href string:modify-contents?task=${item/id}_delete&item_type=${item_type}">
            Delete
          </a>
        </li>
      </ul>
    </td>
  </tr>
</tal:macro>
