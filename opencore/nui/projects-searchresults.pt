<div class="oc-headingBlock">
  <h1>Projects on OpenPlans.org</h1>
  <p class="oc-headingContext">Currently serving <span tal:replace="view/nprojects"/> projects</p>
</div>

<div id="oc-content-main">
  <div class="oc-searchresults">
    <h2>Search Results <span tal:condition="view/search_query | nothing" tal:replace="structure view/search_query" /></h2>

    <tal:got_results condition="view/search_results">
      <div class="oc-searchresults-nresults">Results 1&ndash;10 of 376</div>
      <ul class="oc-paginator">
	<!--<li>&larr; Prev</li>-->
	<li>Page 1</li>
	<li><a href="">2</a></li>
	<li><a href="">3</a></li>
	<li><a href="">Next &rarr;</a></li>
      </ul>
      <ol class="oc-searchresults-list" tal:condition="nocall: view/search_results">
	<li class="oc-searchresults-item" tal:repeat="project view/search_results">
	  <h3><a href="" tal:attributes="href project/absolute_url" tal:content="nocall: project/title">Project Title</a></h3>
	  <span class="oc-discreetText">
            <span>created by <a tal:attributes="href project/CreatorPage | nothing" tal:content="project/Creator" />, <span tal:content="python: view.create_date(project)" /></span>
            <!-- <span>last updated by <a href="link to user profile">username</a>, at 1:37am</span> --> <!-- for sorting by recent activity -->
	  </span>
	  <!-- XXX put in correct mission statement -->
	  <p tal:content="project/mission | string: project mission statement goes here" />
	</li>
      </ol>
      <div class="oc-searchresults-nresults">Results 1&ndash;10 of 376</div>
      <ul class="oc-paginator">
	<!--<li>&larr; Prev</li>-->
	<li>Page 1</li>
	<li><a href="">2</a></li>
	<li><a href="">3</a></li>
	<li><a href="">Next &rarr;</a></li>
      </ul>
    </tal:got_results>
    <div tal:condition="not: view/search_results">No results found.</div>
  </div> <!-- oc-searchresults -->
</div> <!-- content-main -->


<div id="oc-content-sidebar">
  <div class="oc-widget oc-widget-search">    
    <form name="projects_search" action="." tal:attributes="action request/ACTUAL_URL">
      <label><h2>New search</h2></label>
      <input type="text" name="projname" tal:attributes="value request/projname | nothing" />
      <input type="hidden" name="oc-content" value="oc-projects-searchresults" />
      <input type="hidden" name="letter_search" />
      <input type="submit" name="action_search_projects" value="Search" />
    </form>
    
    <ul class="oc-widget-alphabet" tal>
      <li tal:repeat="letter modules/string/uppercase">
	<a href="" tal:content="letter" tal:attributes="href string:javascript:projects_search_letter('${letter}');;">A</a>
      </li>
    </ul>
  </div>
</div><!-- content-sidebar -->
