<div id="content-title">
  <!-- title -->
  <span id="content-title-pagetitle">
    <a tal:attributes="href string:${view/pageURL}/@@magic"
       tal:content="view/pageTitle" />
  </span>

  <!-- tabs -->
  <ul class="oc-tabs">
    <li class="selected">
      <a href="">view</a>
    </li>
    <li class="disabled">
      <a href="">edit</a>
    </li>
    <li class="deselected">
      <a href="">history</a>
    </li>
  </ul>
</div>

<!-- project content -->
<div id="content-main" tal:content="structure view/renderProjectContent" />

<!-- last modified -->
<div>Last modified
  on <span tal:replace="view/lastModifiedOn" />
  by <span tal:replace="view/lastModifiedBy" />
</div>
