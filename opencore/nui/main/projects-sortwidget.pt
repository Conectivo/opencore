<div id="sort_string">
  <tal:if condition="options/is_plural">
    Projects <span tal:replace="options/start" /> &ndash; <span tal:replace="options/end" />
    of <span tal:replace="options/sequence_length" />,
    sorted
  </tal:if>
  <tal:if condition="not:options/is_plural">
    Project <span tal:replace="options/start" /> of <span tal:replace="options/sequence_length" />,
    sorted
  </tal:if>
</div>

<ul id="sortable_fields">
  <li id="relevancy">by relevancy</li>
  <li id="sortable_title">by project name</li>
  <li id="modified">by date updated</li>
  <li id="created">by date created</li>
  <li id="Creator">by project creator</li>
</ul>
