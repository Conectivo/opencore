<html i18n:domain="opencore" metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title"
           tal:content="string:Welcome to ${view/portal_title}!" />
  </head>
  <body>
    <div metal:fill-slot="content">
      <div id="oc-content-main" class="oc-content-main">
        <div id="oc-home-content" class="oc-boxy">
            <div class="oc-headingBlock">
              <h1 i18n:translate="home_header">Do good, better.</h1>
            </div>
            <ul class="oc-plainList" style="width: 50%; float: right;">
                  <li tal:condition="not: view/loggedin">
                    <a class="oc-banana" 
                       tal:attributes="href string:${context/portal_url}/join"
                       tal:content="string:Join ${view/portal_title}" />
                  </li>
                  <li tal:condition="not: view/loggedin">
                    <a class="oc-banana" i18n:translate="home_learn_more" tal:attributes="href string:${context/portal_url}/about">Learn more</a>
                  </li>
                  <li tal:condition="view/loggedin">
                    <a class="oc-banana" i18n:translate="home_find_projects" tal:attributes="href string:${context/portal_url}/projects">Find projects</a>
                  </li>
                  <li tal:condition="view/loggedin">
                    <a class="oc-banana" i18n:translate="home_start_project" tal:attributes="href string:${context/portal_url}/projects/create">Start a project</a>
                  </li>
            </ul>
            <div>
	      <p tal:content="string:${view/portal_title} is a platform for social activism." />
              <p i18n:translate="home_opening_blurb">You want to <strong>make a difference</strong>, we want to <strong>make it easy</strong>. OpenPlans is the simple way to bring groups together, promote your cause, make plans, and get things done.</p>
	    </div>
          </div><!-- oc-home-content -->
        
        <div class="oc-home-columnGroup oc-clearAfter">
          <div class="oc-widget oc-widget-feed oc-home-column">
            <h2 i18n:translate="home_newest_projects" class="oc-feed-title">Newest projects</h2>
            <ul class="oc-feed-list">
              <li class="oc-feed-item oc-clearAfter" tal:repeat="project view/recently_created_projects">
                <!--<img class="oc-avatar" src="" tal:attributes="src project/image_src | nothing" />-->
                <h3 class="oc-feed-item-title">
                  <a href="" tal:attributes="href python:view.project_url(project)" tal:content="project/Title">Project title</a>
                </h3>
                <p i18n:translate="home_project_created" class="oc-feed-item-data oc-discreetText">
                  created
                  <span i18n:name="creation_date" tal:replace="python: view.pretty_date(project.CreationDate)">Jan 1937</span>
                </p>
                <p class="oc-feed-item-description" tal:content="project/Description | nothing">
                  Project Mission
                </p>
              </li>
            </ul>
          </div>
          
          <div class="oc-widget oc-widget-feed oc-home-column">
            <h2 i18n:translate="home_updated_projects" class="oc-feed-title">Updated projects</h2>
            <ul class="oc-feed-list">
              <li class="oc-feed-item oc-clearAfter" tal:repeat="project view/recently_updated_projects">
              <!-- FIXME optimization potential -->
                <!--<img class="oc-avatar" src="" tal:attributes="src project/image_src | nothing" /> -->
                <h3 class="oc-feed-item-title">
                  <a href="" tal:attributes="href python:view.project_url(project)" tal:content="project/Title">Project title</a>
                </h3>
                <p class="oc-feed-item-data oc-discreetText" tal:define="nmembers python: view.n_project_members(project)">
                  <span tal:replace="nmembers">YY</span> member<span tal:condition="python: nmembers != 1" tal:replace="string:s" />
                </p>
                <p class="oc-feed-item-data oc-discreetText" i18n:translate="home_project_updated">
                  last updated <span i18n:name="project_updated" tal:replace="python: view.pretty_date(project.ModificationDate)">Jan 1937</span>
                </p>
              </li>
            </ul>
          </div>
          
        </div>
      </div><!-- content-main -->
      
      <div id="oc-content-sidebar">
        <tal:comment replace="nothing">
          <div id="oc-home-getstarted" class="oc-getstarted">
              <h2>Get started!</h2>
              <ul class="oc-getstarted-list">
                  <li tal:condition="not: view/loggedin">
                    <h3><a tal:attributes="href string:${context/portal_url}/join">Become a member</a></h3>
                    <p class="oc-discreetText">or <a tal:attributes="href string:${context/portal_url}/login">log in</a>.</p>
                  </li>
                  <li>
                    <h3><a tal:attributes="href string:${context/portal_url}/projects">Find projects</a></h3>  
                  </li>
                  <li>
                    <h3><a tal:attributes="href string:${context/portal_url}/people">Find people</a></h3>
                  </li>
              </ul>
            </div>
          </tal:comment>
          <div id="oc-home-news" class="oc-widget oc-widget-feed">
            <h2 class="oc-feed-title"
                tal:content="string:${view/portal_title} News" />
            <ul class="oc-feed-list">
              <li tal:repeat="item view/news" class="oc-feed-item oc-clearAfter">
                <h3 class="oc-feed-item-title">
                  <a tal:content="item/Title" 
                     tal:attributes="href string:${context/portal_url}/news#${item/getId}">News item</a>
                </h3>
                <div class="oc-feed-item-data oc-discreetText">
                  by 
                  <a tal:define="userid item/Creator" tal:attributes="href string:${context/portal_url}/people/${userid}" tal:content="userid" />,
                  <span tal:replace="python: view.pretty_date(item.CreationDate)">Jan 1937</span>
                </div>
                <p class="oc-feed-item-description" tal:content="item/Description">The description is the comment for the news item, however long it is</p>
              </li>
              <li>
                <a class="oc-paginator" tal:attributes="href string:${context/portal_url}/news">more news&hellip;</a>
              </li>
            </ul>
          </div><!-- OpenPlans News -->
          <div class="oc-boxy" style="background: none;">
            <a href="http://topp.openplans.org/"><img src="++resource++img/topp_logo.jpg" style="float: left; margin-right: 1em;"/></a>
            <p><tal:block replace="view/portal_title" /> is proud to be one of the many projects supported by <a href="http://topp.openplans.org/">The Open Planning Project</a>, a New York City&ndash;based non-profit building technology to enhance civic participation. <a href="about">Learn more&hellip;</a>
          </div>
      </div>
      
    </div><!-- content-fill-slot -->
  </body>
</html>
