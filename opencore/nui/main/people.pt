<html i18n:domain="opencore"  metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title"
           tal:content="string:People - ${view/portal_title}" />
  </head>
  <body>
    <div metal:fill-slot="content">

      <div class="oc-headingBlock">
        <h1 tal:content="string:People on ${view/portal_title}" />
        <p i18n:translate="people_members" class="oc-headingContext">
          <span i18n:name="num_members" tal:replace="view/nusers">XXX</span> members,
          <span tal:condition="view/loggedin">and growing</span>
          <span tal:condition="not: view/loggedin">and <a tal:attributes="href string:${context/portal_url}/join">you</a></span>
        </p>
      </div>

      <div id="oc-content-main">

	<tal:viewlet replace="structure provider:opencore.searchresults.top" />

        <div class="oc-blocklist">
          <h2 class="oc-feed-title">New Members</h2>

          <ol class="oc-lineup-list">
            <li class="oc-feed-item oc-clearAfter"
		tal:repeat="item view/recently_created_members">

              <tal:member_info define="member python:view.member_info_for_member(item.getObject());
				       home_url python:context.portal_membership.getHomeUrl(item.getId)">
		<div class="oc-avatar">
                  <a tal:attributes="href home_url">
		    <img class="photo"
			 tal:condition="not:item/has_portrait"
			 tal:attributes="src view/defaultPortraitThumbURL" />
		    <img class="photo"
			 tal:condition="item/has_portrait"
			 tal:attributes="src string:${item/getURL}/portrait_thumb" />
                  </a>
		</div>

                <div class="oc-feed-item-content">
                  <h3 class="oc-feed-item-title n">
                    <a tal:attributes="href home_url" tal:content="item/Title" />
                  </h3>

                <p class="oc-feed-item-data oc-discreetText"
                  tal:define="loc member/location"
                  tal:condition="loc"
                  tal:content="member/location"
                  />

                </div>

              </tal:member_info>
            </li>
	  </ol>
        </div>
        
      </div>

    </div><!-- content-fill-slot -->

  </body>
</html>
