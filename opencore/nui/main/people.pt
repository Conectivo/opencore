<html i18n:domain="opencore"  metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title"
           tal:content="string:People - ${view/portal_title}" />
  </head>
  <body>
    <div metal:fill-slot="content">

      <div class="oc-headingBlock">
        <h1 tal:content="string:People on ${view/portal_title}" />
        <p i18n:translate="people_members" class="oc-headingContext">
          <span i18n:name="num_members" tal:replace="view/nusers">XXX</span> members,
          <span tal:condition="view/loggedin">and growing</span>
          <span tal:condition="not: view/loggedin">and <a tal:attributes="href string:${context/portal_url}/join">you</a></span>
        </p>
      </div>

      <div id="oc-content-main">
        <tal:set_var define="current_search_page string:people;
                     form_action_url string:${context/absolute_url}/searchresults">
        <div metal:use-macro="here/main_macros/search_widget" />
        </tal:set_var>

        <div class="oc-homepage-column-33 oc-widget oc-widget-feed oc-widget-feed-home">
          <h2 class="oc-feed-title">New Members</h2>
          <ul class="oc-feed-list">
            <li class="oc-feed-item oc-clearAfter"
              tal:repeat="member_brain view/recently_created_members">
              <tal:member_info define="member python:view.member_info_for_member(member_brain.getObject())">
                <a tal:attributes="href string:${member/folder_url}/profile">
                  <img class="oc-avatar photo" src="" tal:attributes="src member/portrait_thumb_url" />
                </a>
                <div class="oc-feed-item-content">
                  <h3 class="oc-feed-item-title">
                    <a tal:attributes="href string:${member/folder_url}/profile" tal:content="member/id">Username</a>
                  </h3>
                  <div class="n" tal:content="member/fullname">name</div>

                <p class="oc-feed-item-data oc-discreetText"
                  tal:define="loc member/location"
                  tal:condition="loc"
                  tal:content="member/location"
                  />

                </div>

              </tal:member_info>
            </li>
          </ul>
        </div>
        
      </div>

    </div><!-- content-fill-slot -->

  </body>
</html>
