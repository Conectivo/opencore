<div metal:define-macro="search_widget" class="oc-widget oc-widget-search oc-widget-multiSearch oc-boxy">    
  <!--<h1 class="oc-biggerText">Search</h1>-->
  <form name="search_form" action="." tal:attributes="action form_action_url"
  tal:define="letter_search request/letter_search | string:; search_for request/search_for | string:">
    
     <label class="oc-label-heading oc-biggerText">Search</label>
        <a tal:condition="python:current_search_page!='people'" class="oc-search-people" tal:attributes="href string:${context/portal_url}/people/searchresults?letter_search=${letter_search}&search_for=${search_for}">People</a>
        
        <strong tal:condition="python:current_search_page=='people'">People</strong>
        
       |
      
      <a tal:condition="python:current_search_page!='projects'" class="oc-search-projects" tal:attributes="href string:${context/portal_url}/projects/searchresults?letter_search=${letter_search}&search_for=${search_for}">Projects</a>
      
      <strong tal:condition="python:current_search_page=='projects'">Projects</strong>
      
      |
        <a tal:condition="python:current_search_page!='sitesearch'" class="oc-search-everything" tal:attributes="href string:${context/portal_url}/sitesearch?letter_search=${letter_search}&search_for=${search_for}">Everything</a>      
        <strong tal:condition="python:current_search_page=='sitesearch'">Everything</strong>
     
      <div class="oc-form-fieldBlock">
      <input class="oc-input-typeText" type="text" name="search_for" tal:attributes="value string:${search_for}" />
      <button type="submit">Search</button>
    </div>
  </form>
  
  <ul class="oc-widget-alphabet oc-clearAfter oc-boxy" tal>
              <li tal:repeat="letter modules/string/uppercase">
              
                <a href="" tal:content="letter" tal:attributes="href string:${request/ACTUAL_URL}?letter_search=${letter}" tal:condition="python:letter!=request.form.get('letter_search')">A</a>
                
                <a href="" class="oc-widget-alphabet-selectedLetter" tal:content="letter" tal:attributes="href string:${request/ACTUAL_URL}?letter_search=${letter}" tal:condition="python:letter==request.form.get('letter_search')">A</a>
              </li>
  </ul>
</div><!-- end .oc-widget-multiSearch -->
