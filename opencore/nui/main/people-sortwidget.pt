<div id="sort_string">
  <tal:if condition="options/is_plural">
    Members <span tal:replace="options/start" /> &ndash; <span tal:replace="options/end" />
    of <span tal:replace="options/sequence_length" />,
    sorted
  </tal:if>
  <tal:if condition="not:options/is_plural">
    Member <span tal:replace="options/start" /> of <span tal:replace="options/sequence_length" />,
    sorted
  </tal:if>
</div>

<ul id="sortable_fields">
  <li id="relevancy">by relevancy</li>
  <li id="getId">by username</li>
  <li id="exact_getFullname">by name</li>
</ul>
