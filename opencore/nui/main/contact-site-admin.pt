<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/@@standard_macros/master"
      i18n:domain="opencore">

<body>
<div metal:fill-slot="content">

<div class="oc-headingBlock">
  <h1 tal:content="string:Contact ${view/portal/Title}" />     
  <p class="oc-headingContext"
     i18n:translate="contact-site-admin_description">
    Fill in the form
    below to contact the site administrators.
  </p>
</div>

<form name="feedback_form"
      action=""
      method="post"
      tal:define="errors view/errors"
      tal:attributes="action request/URL">

  <fieldset class="oc-boxy">
    <table class="oc-form">
      <tbody>
        <tal:widget repeat="widget view/widgets">
          <tr class="oc-form-row"
               tal:define="error widget/error"
               tal:attributes="class python:error and 'oc-fieldBlock-error' or default"
               >
            <th class="oc-form-label">
              <label tal:content="widget/label"
                     i18n:translate="widget/label"
                     tal:attributes="for widget/name" />
              <span class="oc-discreetText" title="Required"
                    tal:condition="widget/required"
                    i18n:attributes="title title_required;"
                    i18n:translate="label_required">(Required)</span>
            </th>
            <td class="oc-form-value">
              <div class="oc-form-error"
                   tal:condition="error"
                   tal:content="error" />
              <tal:widget-contents replace="structure widget" />
            </td>
          </tr>
        </tal:widget>
      </tbody>
    </table>
    <div class="oc-actions">
      <input class="context"
             tabindex=""
             type="submit"
             name="label_send"
             value="Send"
             i18n:attributes="value label_send" />
    </div>
</form>

</div>

</body>
</html>
