<div id="sort_string">
  <tal:if condition="options/is_plural">
    Results <span tal:replace="options/start" /> &ndash; <span tal:replace="options/end" />
    of <span tal:replace="options/sequence_length" />,
    sorted
  </tal:if>
  <tal:if condition="not:options/is_plural">
    Result <span tal:replace="options/start" /> of <span tal:replace="options/sequence_length" />,
    sorted
  </tal:if>
</div>

<ul id="sortable_fields">
  <li id="relevancy">by relevancy</li>
  <li id="getId">A to Z</li>
  <li id="modified">by date updated</li>
  <li id="portal_type">by content type</li>
</ul>
