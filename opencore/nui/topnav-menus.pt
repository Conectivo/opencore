<tal:vars tal:define="global site here/portal_url" />

<!-- OpenPlans logo -->
<h1 id="oc-topnav-openplans-logo">
  <a tal:attributes="href site"><img tal:attributes="src view/logoURL;
      alt view/sitetitle" /></a>
</h1>

<!-- navigation links -->
<ul id="oc-topnav-openplans-links">
  <li>
    <a tal:attributes="href string:${site}/people/@@magic?oc-content=oc-people">people</a>
  </li>
  <li>
    <a tal:attributes="href string:${site}/projects/@@magic?oc-content=oc-projects">projects</a>
  </li>
  <li>
    <a tal:attributes="href string:${site}/@@magic?oc-content=oc-start-project">start a project</a>
  </li>
  <tal:block tal:condition="view/loggedin" tal:define="usr view/user">
    <li>
      <a tal:attributes="href string:${usr/url}/@@magic?oc-content=oc-user-profile"
         tal:content="usr/id" />
    </li>
    <li>
      <a tal:attributes="href string:${site}/logout/@@magic?oc-content=oc-user-logout">log out</a>
    </li>
  </tal:block>
  <tal:block tal:condition="not:view/loggedin">
    <li>
      <a tal:attributes="href string:${site}/@@magic?oc-content=oc-login-join">log in/join</a>
    </li>
  </tal:block>
</ul>
