<html metal:use-macro="here/@@standard_macros/master">
  <head>
    <title metal:fill-slot="title" tal:content="string:Tour - ${view/area/Title} on ${view/portal_title}" />
  </head>
  <body>

    <div metal:fill-slot="content">

      <div id="oc-content-main">

	<!-- explanation of editting your profile -->
	<p>
	  <a tal:attributes="href
			     string:${context/absolute_url}/profile-edit">
	    edit my profile
	  </a>
	</p>

	<!-- if the member has been invited by email,
	     display information pertaining to their projects -->
	<div tal:condition="view/has_projects">
	  You has got projects.

	  <!-- project invitations (is this deprecated?) -->
	  <ul tal:define="proj_id view/invitations" 
	      tal:condition="proj_id">
	    <li class="oc-invite oc-boxy oc-clearAfter"
              tal:attributes="id string:${proj_id}_invitation">
                tal:define="proj_id projinfo/proj_id"
		tal:repeat="invite invitations">
		You have been invited by 
		<p class="oc-invite-content">
                <a href="" tal:attributes="href string:${view/portal_url}/projects/${proj_id}" tal:content="projinfo/title">Animal Campaign</a> 
                has invited you to become a member
              </p>
              <ul class="oc-actions oc-invite-actions oc-actionClose"
                  tal:define="url request/ACTUAL_URL">
                <li tal:repeat="action view/invitation_actions">
                  <a tal:attributes="href string:${url}?task|${proj_id}|${action}Invitation=${action};
                                     class string:oc-actionLink oc-js-actionLink oc-choose${action}"
                     tal:content="action"
                     />
                </li>
              </ul>
            </li>
	  </ul>

	  <!-- projects join (is this done?) -->
	  <ul tal:define="projects view/project_brains"
	      tal:condition="projects">
	    <li tal:repeat="project projects">
	      You are a member of
	      <a tal:attributes="href project/getURL"
		 tal:content="project/Title"/>
	    </li>
	  </ul>

	</div>

	<!-- if the member has joined on their own, 
	     give them some idea on how they might get involved -->
	<div tal:condition="not:view/has_projects">
	  You aren't the member of any projects.

	  <!-- explanation of project page -->
	  <p>
	    <a href="string:${view/portal_url}/projects">projects</a>
	  </p>

	  <!-- start a project -->
	  <p>
	    <a href="string:${view/portal_url}/projects/create">start a project</a>
	  </p>

	  <!-- join upper west side project -->
	  <!-- commented out for now
	  <p>
	    <a href="${view/portal_url}/projects/
	  </p>
	  -->
	</div>

      </div><!-- end #oc-content-main -->

      <div id="oc-content-sidebar">
      </div><!-- end #oc-content-sidebar -->

  </div><!-- content-fill-slot -->
  </body>
</html>

