<tal:vars define="usr view/viewedmember;
                  data view/viewed_member_info">

<html metal:use-macro="here/@@standard_macros/master">
  <body>
    <div metal:fill-slot="content">
      <div id="oc-content-main">
        <div id="oc-member-badge" class="oc-boxy oc-clearAfter vcard">
          <div class="oc-avatar">
            <img class="photo" tal:attributes="src data/portraiturl" />
          </div>
          <div class="oc-member-details">
            <div class="oc-headingBlock">
              <h1 class="fn">
                <span tal:content="data/id" />
                <a tal:condition="view/viewingself" href="./profile-edit" class="oc-liveItem_showForm">Edit</a>
              </h1>
              <p class="oc-member-fullname n" tal:content="data/fullname" />
              <p class="oc-headingContext oc-discreetText">
                member since <span tal:replace="data/membersince" />,
                last login <span tal:replace="data/lastlogin" />
              </p>
            </div>
            <dl class="oc-member-info">
              <tal:location tal:condition="data/location">
                <dt>Location</dt>
                <dd class="adr" tal:content="data/location" />
              </tal:location>
              <dt>Projects</dt>
              <dd>
                <tal:projects condition="usr/projectBrains">
                  <ul class="oc-inlineList">
                    <li tal:repeat="proj usr/projectBrains"><a
                        tal:attributes="href proj/getURL"
                        tal:content="proj/Title" /><tal:private
                        condition="python: proj.review_state == 'closed'">
                        (private)</tal:private></li>
                  </ul>
                </tal:projects>
                <tal:noprojects condition="not: usr/projectBrains">
                  none
                  <span tal:condition="view/viewingself">
                    <a tal:attributes="href string:${view/siteURL}/projects">get involved</a>
                  </span>
                </tal:noprojects>
              </dd>
            </dl>
          </div>
        </div>
        <dl class="oc-member-info">
          <tal:block condition="usr/getStatement">
            <dt>Personal Statement</dt>
            <dd tal:content="usr/statement" />
          </tal:block>
          <tal:block condition="usr/getSkills">
            <dt>Skills/Interests</dt>
            <dd tal:content="usr/getSkills" />
          </tal:block>
          <tal:block condition="usr/getAffiliations">
            <dt>Affiliations</dt>
            <dd tal:content="usr/getAffiliations" />
          </tal:block>
          <tal:block condition="usr/getBackground">
            <dt>Background</dt>
            <dd tal:content="usr/getBackground" />
          </tal:block>
          <tal:block condition="usr/getFavorites">
            <dt>Favorites</dt>
            <dd tal:content="usr/getFavorites" />
          </tal:block>
        </dl>
      </div><!-- end #oc-content-main -->

      <div id="oc-content-sidebar">
        <div class="oc-boxy">
          <h2>Recent activity</h2>
          <div class="oc-widget oc-widget-lastModified">
            <div class="oc-headingBlock">
              <h3>Pages last modified</h3>
            </div><!-- end .oc-headingBlock -->
            <table class="oc-table" cellpadding="0" cellspacing="0">
              <thead>
                <tr>
                  <th scope="col">Date</th>
                  <th scope="col">Page</th>
                </tr>
              </thead>
              <tbody>
                <tr tal:repeat="item view/activity">
                  <td tal:content="item/date" />
                  <td><a tal:attributes="href item/url" tal:content="item/title" /></td>
                </tr>
              </tbody>
            </table>
          </div><!-- end .oc-widget-lastModified -->
        </div><!-- end .oc-boxy -->
      </div><!-- end .oc-content-sidebar -->
    </div><!-- content-fill-slot -->
  </body>
</html>
</tal:vars>
