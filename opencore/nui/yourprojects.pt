<div id="content-main">
  <div class="headingBlock">
    <h1>Your Projects</h1>
    <p class="headingContext">View and manage your project memberships</p>
  </div>
  
  <div class="widget-invitations"
       tal:define="invites view/get_invitations_for_user">
    <div class="headingBlock">
      <h2>Membership invitations you've received 
      (<span tal:replace="python: len(invites)">1</span>)</h2>
    </div>
    <ul class="invitations-list">
      <li class="invitation"
	  tal:repeat="invite invites">
        <div class="avatar">
          <img src="" />
        </div>
        <div class="invitation-content">
          <p><a href="" tal:content="invite/name">Animal Campaign</a> 
	    has invited you to become a member</p>
        </div>
        <ul class="actions">
          <li><a href="" class="button chooseAccept">Accept</a></li>
          <li><a href="" class="button chooseReject">Reject</a></li>
          <li><a href="" class="button chooseSpam">Spam</a></li>
        </ul>
      </li>
    </ul>
  </div><!-- end .widget-invitations -->
  
  <hr />

  <div class="widget-tableData" 
       tal:define="projects view/get_projects_for_user">
    <div class="headingBlock">
      <h2 class="toggleFold">Projects you belong to
      (<span tal:replace="python: len(projects)">1</span>)</h2>
    </div>
  
    <table id="" cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th class=""><input type="checkbox" /></th>
          <th class="columnSortable">Project </th>
          <th class="columnSortable">Role</th>
          <th class="columnSortable">Since</th>
          <th class="columnSortable">Status</th>
          <th class="columnAction">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr tal:repeat="project projects">
          <td><input type="checkbox" /></td>
          <td tal:content="project/title">Animal Campaign</td>
          <td tal:content="project/role">Member</td>
          <td tal:content="project/since">5:30am</td>
          <td tal:content="project/status">not set</td>
          <td><a href="#" class="edit">Leave project</a></td>
        </tr>
      </tbody>
    </table>
    <ul class="actions">
      <li><input type="submit" value="Leave project" class="chooseThis" /></li>
      <li><input type="submit" value="Do something else" /></li>
    </ul>
  </div><!-- end .widget-tableData -->
  
  
  

</div><!-- end #content-main -->
<div id="content-rbar33">
  Sidebar
</div><!-- end #content-rbar33 -->
<hr />
