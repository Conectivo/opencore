<html metal:use-macro="here/@@standard_macros/master">
  <head>
    <link metal:fill-slot="link" />
    <script metal:fill-slot="script" language="javascript" type="text/javascript" src="++resource++javascripts/searching.js" />
  </head>
  <body>

    <div metal:fill-slot="content">

<div class="oc-headingBlock">
	<h1>Your account</h1>
	<p class="oc-headingContext">View and manage your project memberships and account settings</p>
</div>
  
<div id="oc-content-main">
  
  <div class="oc-widget oc-widget-invite">
    <div class="oc-headingBlock">
      <h2>Membership invitations you've received (x)</h2>
    </div>
    <ul class="oc-invite-list">
      <li class="oc-invite oc-boxy oc-clearAfter">
        <div class="oc-avatar">
          <img src="" />
        </div>
        <p class="oc-invite-content">
          <a href="">Animal Campaign</a> 
	    has invited you to become a member
        </p>
        <ul class="oc-actions oc-invite-actions">
          <li><a href="" class="oc-button oc-chooseAccept">Accept</a></li>
          <li><a href="" class="oc-button oc-chooseReject">Reject</a></li>
          <li><a href="" class="oc-button oc-chooseSpam">Spam</a></li>
        </ul>
        <a href="#" title="Ignore" class="oc-close">X</a>
      </li>
      <li class="oc-invite oc-boxy oc-clearAfter">
        <div class="oc-avatar">
          <img src="" />
        </div>
        <p class="oc-invite-content">
          <a href="">Animal Campaign</a> 
	    has invited you to become a member
        </p>
        <ul class="oc-actions oc-invite-actions">
          <li><a href="" class="oc-button oc-chooseAccept">Accept</a></li>
          <li><a href="" class="oc-button oc-chooseReject">Reject</a></li>
          <li><a href="" class="oc-button oc-chooseSpam">Spam</a></li>
        </ul>
        <a href="#" title="Ignore" class="oc-close">X</a>
      </li>
      <li class="oc-invite oc-boxy oc-clearAfter">
        <div class="oc-avatar">
          <img src="http://www.3dvalley.com/tutorials/modeling_basketball_clip_image037.gif" />
        </div>
        <p class="oc-invite-content">
          <a href="">Animal Campaign for a really important animal named Charlie</a> 
	    has invited you to become a member
        </p>
        <ul class="oc-actions oc-invite-actions">
          <li><a href="" class="oc-button oc-chooseAccept">Accept</a></li>
          <li><a href="" class="oc-button oc-chooseReject">Reject</a></li>
          <li><a href="" class="oc-button oc-chooseSpam">Spam</a></li>
        </ul>
        <a href="#" title="Ignore" class="oc-close">X</a>	
      </li>
    </ul>
  </div><!-- end .widget-invitations -->
  

  <div class="oc-widget oc-widget-table oc-clearAfter">
    <div class="oc-headingBlock">
      <h2 class="oc-toggleFold">Projects you belong to (x)</h2>
    </div><!-- end .headingBlock -->
  
    <table id="" class="oc-table" cellpadding="0" cellspacing="0">
      <thead>
        <tr>
          <th class="" scope="col"><input type="checkbox" /></th>
          <th class="oc-columnSortable" scope="col">Project </th>
          <th class="oc-columnSortable" scope="col">Role</th>
          <th class="oc-columnSortable" scope="col">Since</th>
          <th class="oc-columnSortable" scope="col">Status</th>
          <th class="oc-columnAction" scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><input type="checkbox" /></td>
          <td class="oc-table-row-title"><a href="">Animal Campaign for a poor little sick kittie named Fatty</a></td>
          <td id="liveEdit_11" class="oc-liveEdit">
			<span id="liveEdit_11_value" class="oc-liveEdit-value">not set</span>
			<div id="liveEdit_11_form" class="oc-liveEdit-form">
				<select>
					<option>Member</option>
					<option>Administrator</option>
					<option>Administrator2</option>
					<option>Administrator3</option>
				</select>
			</div>
          </td>
          <td>5:30am</td>
          <td id="oc-liveEdit_12" class="oc-liveEdit">
			<span id="oc-liveEdit_12_value" class="oc-liveEdit-value">not set</span>
			<div id="oc-liveEdit_12_form" class="oc-liveEdit-form">
				<select>
					<option>-- not set --</option>
					<option>Active</option>
					<option>Banned</option>
				</select>
			</div>
          </td>
          <td>
          	<ul class="oc-actions oc-table-row-actions">
          		<li><a href="#">Leave</a></li>
          	</ul>
          </td>
        </tr>
        <tr>
          <td><input type="checkbox" /></td>
          <td class="oc-table-row-title"><a href="">Animal Campaign 2</a></td>
          <td id="oc-liveEdit_9" class="oc-liveEdit">
			<span id="oc-liveEdit_9_value" class="oc-liveEdit-value">not set</span>
			<div id="oc-liveEdit_9_form" class="oc-liveEdit-form">
				<select>
					<option>-- not set --</option>
					<option>Active</option>
					<option>Banned</option>
				</select>
			</div>
          </td>          <td>5:30am</td>
          <td id="oc-liveEdit_13" class="oc-liveEdit">
			<span id="oc-liveEdit_13_value" class="oc-liveEdit-value">not set</span>
			<div id="oc-liveEdit_13_form" class="oc-liveEdit-form">
				<select>
					<option>-- not set --</option>
					<option>Member</option>
					<option>Administrator</option>
					<option>Administrator2</option>
					<option>Administrator3</option>
				</select>
				<!--<input type="submit" value="save" />-->
			</div>
          </td>
          <td>
          	<ul class="oc-actions oc-table-row-actions">
          		<li><a href="#">Leave</a></li>
          	</ul>
          </td>
        </tr>
      </tbody>
    </table>
    <ul class="oc-actions oc-table-actions">
      <li><input type="submit" value="Leave project" class="oc-button oc-chooseThis" /></li>
      <li><input type="submit" value="Do something else" class="oc-button" /></li>
    </ul>
    <ul class="oc-paginator oc-table-paginator">
		<!--<li>&larr; Prev</li>-->
		<li>Page 1</li>
		<li><a href="">2</a></li>
		<li><a href="">3</a></li>
		<li><a href="">Next &rarr;</a></li>
	</ul>
  </div><!-- end .widget-table -->

</div><!-- end #oc-content-main -->

<div id="oc-content-sidebar">
	<div class="oc-boxy">
	  <div class="oc-headingBlock">
			<h2>Account settings</h2>
		</div>
		<a href="#">Edit profile</a>
		<form class="oc-expander">
			<fieldset>
				<legend class="oc-legend-label">
					<a href="#" class="oc-expander-link">Change email</a>
				</legend>
				<ul class="oc-expander-content oc-plainList">
					<li>
						<label for="">Email</label><br />
						<input type="text" />
					</li>
					<li class="oc-form-fieldBlock oc-smallText">
						<input type="checkbox" class="oc-input-typeCheck" />
						<label for="">Hide email address by default?</label>
					</li>
				</ul>
			</fieldset>
		</form>
		<form class="oc-expander">
			<fieldset>
				<legend class="oc-legend-label">
					<a href="#" class="oc-expander-link">Change password</a>
				</legend>
				<ul class="oc-expander-content oc-plainList">
					<li>
						<label for="">Current password</label><br />
						<input type="password" />
					</li>
					<li>
						<label for="">New password</label><br />
						<input type="password" />
					</li>
					<li>
						<label for="">Confirm new password</label><br />
						<input type="password" />
					</li>
				</ul>
			</fieldset>
		</form>
	</div>
	
</div><!-- end #oc-content-sidebar -->


  </div><!-- content-fill-slot -->
</body>
</html>