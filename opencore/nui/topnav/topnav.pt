<div id="oc-topnav">

  <h1>
    <a tal:attributes="href string:${view/areaURL}"
       tal:content="view/areatitle" />
  </h1>

  <tal:contextMenu replace="structure view/contextmenu" />

  <div id="oc-topnav-usermenu">

    <form name="searchform"
          tal:attributes="action string:${view/portal/absolute_url}/search"
          style="white-space:nowrap"
          onsubmit="return liveSearchSubmit()">

      <img src="++resource++img/logo.gif"
           style="display: inline; vertical-align: bottom;" />
      <!--label for="searchGadget" class="hiddenStructure">Search Site</label-->

      <input id="searchGadget" name="SearchableText"
             type="text" size="10" title="Search Site"
             accesskey="4" class="oc-input-typeText" />

      <!--div class="LSResult" id="LSResult" style=""><div class="LSShadow" id="LSShadow"></div></div-->
    </form>

    <tal:userMenu replace="structure view/usermenu" />

  </div>

</div>
