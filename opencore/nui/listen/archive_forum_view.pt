<!-- XXX Rollie: this ugliness is ripped directly from
the listen plone template. you will want to audit for
raging plone-isms (e.g. 'oddrow' below) -->

<html metal:use-macro="here/@@standard_macros/master">
  <body>
    <div metal:fill-slot="content">
      <div id="oc-content-main">
        <tal:threads define="threads view/getTopics; batch threads;">

          <h1 i18n:translate="" tal:content="view/Title" />
          <div metal:use-macro="here/@@listen_macros/tabs"/>
          <p id="listaddress" tal:content="view/listAddress" tal:condition="view/listAddress" />
          <p tal:content="view/listDescription" tal:condition="view/listDescription" />
          <table cellpadding="20">
            <tr>
              <td>
                <a i18n:translate="" href="date_view">Switch to date view</a>
              </td>
              <td>
                <a href="#" tal:condition="view/canPost"
                   tal:attributes="href string:${context/absolute_url}/new_topic;"
                   i18n:translate="label_forum_new_topic_button">
                  post new message
                </a>
              </td>
            </tr>
          </table>

          <table id="forum-topics" tal:condition="threads" summary="Forum view" i18n:attributes="summary">
            <thead>
              <tr>
                <th><tal:title i18n:translate="list_archive_thread_subject">Subject</tal:title></th>
                <th><tal:title i18n:translate="list_archive_thread_originator">Opened By</tal:title></th>
                <th><tal:title i18n:translate="list_archive_thread_replies">Replies</tal:title></th>
                <th><tal:title i18n:translate="list_archive_thread_recent_post_date">Last Updated</tal:title></th>
              </tr>
            </thead>

            <tbody>
              <tal:items repeat="item threads">
                <tr tal:define="oddrow repeat/item/odd;"
                    tal:attributes="class python:oddrow and 'even' or 'odd'">

                  <td>
                    <a href="#"
                       i18n:translate="" tal:content="item/brief_subject"
                       tal:attributes="href item/url">
                    Subject</a>
                  </td>
                  <td>
                    <a href="."
                       tal:omit-tag="not:item/from_id"
                       tal:attributes="href string:${here/portal_url}/people/${item/from_id}">
                      <span tal:replace="item/mail_from">test@example.com</span>
                    </a>
                  </td>
                  <td tal:content="item/responses">10</td>
                  <td tal:content="item/last_post" i18n:translate="">12/1/2005 3:54 pm</td>
                </tr>
              </tal:items>
            </tbody>
          </table>

          <p tal:condition="not: threads" i18n:translate="description_no_posts">
            There are currently no posts in this archive.
          </p>
        </tal:threads>
      </div>
    </div>
  </body>
</html>
