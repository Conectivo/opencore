<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" i18n:domain="plone"
  metal:use-macro="here/@@standard_macros/master">
  <body>
    <div metal:fill-slot="content">
      <div id="oc-content-main" i18n:domain="listen"
        tal:define="can_subscribe view/canSubscribe;
                    isAnon not: view/loggedin;
                    subscribed view/isSubscribed">
            
        <h1 i18n:translate="" tal:content="view/Title" class="documentFirstHeading">
          Title or Id
        </h1>

        <p class="documentDescription" tal:content="view/Description" tal:condition="view/Description">
          Description
        </p>

        <ul>
          <li i18n:translate="" id="listaddress">
            <b>Address:</b>
            <div i18n:translate="" tal:content="view/address">
              address@example.com
            </div>
          </li>

          <li i18n:translate="" id="listmanagers">
            <b>Managers:</b>
            <tal:manager tal:repeat="manager view/list_managers">
              <br /><span tal:content="manager" />
            </tal:manager>
          </li>

          <li i18n:translate="" id="list-type">
            <b>Type:</b>
            <div tal:content="view/list_type" i18n:translate="">
              List type
            </div>
          </li>

          <li i18n:translate="" id="archival-state">
            <b>Archive:</b>
            <div>
              <span tal:content="view/archived" i18n:translate="">
                Messages to this list are archived
              </span>
              <a tal:condition="view/is_archived" tal:attributes="href python:'%s/archive' % view.context.absolute_url()" i18n:translate="">
                view archive.
              </a>
            </div>
          </li>
        </ul>

        <hr />

        <p tal:condition="python:isAnon or not can_subscribe"
          id="unsub-instructions" i18n:translate="unsub-instructions">
          To unsubscribe from this list send an email to the list with the subject
          "<span tal:replace="view/unsubscribe_keyword" i18n:name="sunsubscribe_keyword" />" and an empty body.
        </p>

        <form name="subscription-form" id="subscription-form"
          tal:define="errors view/errors|nothing;
          isPending view/isPending"
          action="." tal:attributes="action request/ACTUAL_URL">

          <tal:anon condition="python:isAnon and can_subscribe">
            <p id="subscription-satus" i18n:translate="">
              To subscribe to the list enter your email in the field below.
            </p>
            <div tal:define="error errors/email_address|nothing"
              tal:attributes="class python:'oc-fieldBlock' + (error and ' error' or '')">
              <label for="email_address" i18n:translate="label_email">Email Address:</label>
              <span title="Required" i18n:domain="plone"
                i18n:translate="label_required" i18n:attributes="title title_required;">
                (Required)
              </span>
              <div tal:condition="error" tal:content="error" i18n:translate="">The Error</div>
              <input type="text" value="" name="email_address"
                tal:attributes="value request/email_address|nothing" />
            </div>
            <div>
              <input type="submit" name="subscribe_email"
                value="Subscribe Address" i18n:attributes="value" />
            </div>
          </tal:anon>
          <tal:member condition="python:can_subscribe and not isAnon and not isPending">
            <p id="subscription-satus"
              tal:condition="subscribed"
              i18n:translate="">You are currently subscribed to this list.</p>
            <p id="subscription-satus"
              tal:condition="not:subscribed"
              i18n:translate="">You are not currently subscribed to this list.</p>
            <div>
              <input type="submit" class="standalone"
                name="unsubscribe_member" value="Unsubscribe"
                tal:condition="subscribed" i18n:attributes="value" />
              <input type="submit" class="standalone"
                name="subscribe_member" value="Subscribe"
                tal:condition="not:subscribed" i18n:attributes="value" />
            </div>
          </tal:member>
          <p tal:condition="python: isPending">
            Your subscription request is pending moderation by the list manager.
          </p>
        </form>

        <p id="manager_email" tal:content="view/manager_email" i18n:translate="">
          Please direct inquiries about this list to manager@list.com.
        </p>

      </div>
    </div>
  </body>
</html>
