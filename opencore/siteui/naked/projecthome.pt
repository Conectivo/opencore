          <span id="content-title-pagetitle"
            tal:content="here/@@project_info/fullname"/>
          <ul class="op-tabs">
            <li><a href="project-home">View</a></li>
            <li><a href="project-home/edit">Edit</a></li>
            <li><a href="project-home/versions_history_form">History</a></li>
            <!-- TODO check permissions for edit/history -->
          </ul>
        </div>

        <!-- project content-->
        <div tal:replace="structure python:view.include('opencore-projectcontent')" />

      </div> <!-- content-container -->

      <!-- footer -->
      <div tal:replace="structure python:view.include('opencore-footer')" />

    </div> <!-- page-container -->
