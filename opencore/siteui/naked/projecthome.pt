<html>
  <head>
    <link rel="stylesheet" href="++resource++naked.css" type="text/css" />
    <title tal:content="here/@@project_info/pageTitle" />
  </head>
  <body>
    <div id="page-container">


      <!-- topnav -->

      <!-- for transcluder -->
      <a tal:condition="transclude"
         href="@@opencore-topnav" rel="include">navigation</a>

      <!-- for zope -->
      <div tal:condition="not:transclude"
           tal:replace="structure here/@@opencore-topnav" />

      <!-- end topnav -->


      <div id="content-container">
        <div id="content-title">
          <span id="content-title-pagetitle" tal:content="here/@@project_info/fullname"/>
          <ul class="op-tabs">
            <li><a href="project-home">View</a></li>
            <li><a href="project-home/edit">Edit</a></li>
          </ul>
        </div>


        <!-- project content-->

        <!-- for transcluder -->
        <a tal:condition="transclude"
           href="@@opencore-projectcontent" rel="include">content</a>

        <!-- for zope -->
        <div tal:condition="not:transclude"
             tal:replace="structure here/@@opencore-projectcontent" />

        <!-- end project content -->


      </div> <!-- content-container -->


      <!-- footer -->

      <!-- for transcluder -->
      <a tal:condition="transclude"
         href="@@opencore-footer" rel="include">footer</a>

      <!-- for zope -->
      <div tal:condition="not:transclude"
           tal:replace="structure here/@@opencore-footer" />

      <!-- end footer -->


    </div> <!-- page-container -->
  </body>
</html>
